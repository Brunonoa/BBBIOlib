/dts-v1/;
/plugin/;
 
/ {
   	compatible = "ti,beaglebone", "ti,beaglebone-black";
 
        /* identification */
	part-number = "BBB-EHRPWM0";
	version = "00A0";


	/* state the resources this cape uses */
	exclusive-use =
		/* the pin header uses */
		"P9.22",        /* ehrpwm0A */
		"P9.21",        /* ehrpwm0B */
		"P8.36",	/* ehrpwm1A */
		"P8.34",	/* ehrpwm1B */
		"P8.45",	/* ehrpwm2A */
		"P8.45",	/* ehrpwm2B */
                /* the hardware ip uses */
		"epwmss0",
		"ehrpwm0",
		"epwmss1",
		"ehrpwm1",
		"epwmss2",
		"ehrpwm2";
 
        fragment@0 {
                target = <&am33xx_pinmux>;
                __overlay__ {
                        bbb_ehrpwm0_pins: pinmux_bbb_ehrpwm0_pins {
                                pinctrl-single,pins = <
					0x150 0x3	/* spi0_sclk.ehrpwm0A , OUTPUT_PULLDOWN | MODE3 P9_22*/
					0x154 0x3	/* spi0_d0  .ehrpwm0B , OUTPUT_PULLDOWN | MODE3 P9_21*/
                                >;	
                        };
                        bbb_ehrpwm1_pins: pinmux_bbb_ehrpwm1_pins {
                                pinctrl-single,pins = <
					0x0C8 0x2	/* lcd_data10.ehrpwm1A , OUTPUT_PULLDOWN | MODE2 P8_36*/
					0x0CC 0x2	/* lcd_data11.ehrpwm1B , OUTPUT_PULLDOWN | MODE2 P8_34*/
                                >;	
                        };
                        bbb_ehrpwm2_pins: pinmux_bbb_ehrpwm2_pins {
                                pinctrl-single,pins = <
					0x0A0 0x3	/* lcd_data0.ehrpwm2A , OUTPUT_PULLDOWN | MODE3 P8_45*/
					0x0A4 0x3	/* lcd_data1.ehrpwm2B , OUTPUT_PULLDOWN | MODE3 P8_46*/
                                >;	
                        };
                };
        };
 
	fragment@1 {
                target = <&epwmss0>;
                __overlay__ {
                        status = "okay";
                        pinctrl-names = "default";
                };
        };
	fragment@2 {
                target = <&ehrpwm0>;
                __overlay__ {
                        status = "okay";
                        pinctrl-names = "default";
                        pinctrl-0 = <&bbb_ehrpwm0_pins>;
                };
        };
	
	fragment@3 {
                target = <&epwmss1>;
                __overlay__ {
                        status = "okay";
                        pinctrl-names = "default";
                };
        };
	fragment@4 {
                target = <&ehrpwm1>;
                __overlay__ {
                        status = "okay";
                        pinctrl-names = "default";
                        pinctrl-0 = <&bbb_ehrpwm1_pins>;
                };
        };
	fragment@5 {
                target = <&epwmss2>;
                __overlay__ {
                        status = "okay";
                        pinctrl-names = "default";
                };
        };
	fragment@6 {
                target = <&ehrpwm2>;
                __overlay__ {
                        status = "okay";
                        pinctrl-names = "default";
                        pinctrl-0 = <&bbb_ehrpwm2_pins>;
                };
        };
};
